# Configuración específica para Render
NODE_ENV=production
PORT=10000

# Configuración de base de datos
# Estas variables deben configurarse en el dashboard de Render
# DB_HOST=
# DB_PORT=3306
# DB_USER=
# DB_PASSWORD=
# DB_NAME=

# Configuración de JWT
# JWT_SECRET debe configurarse en el dashboard de Render
# JWT_SECRET=
JWT_EXPIRES_IN=8h

# URL del frontend
FRONTEND_URL=https://brayamsac-frontend.vercel.app

# Optimizaciones para MySQL
MYSQL_CONNECTION_LIMIT=10

# Configuración de logs
LOG_LEVEL=error
DISABLE_LOGIN_LOGS=true