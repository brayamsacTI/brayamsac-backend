# Configuración específica para Render
NODE_ENV=production
PORT=10000

# Configuración de base de datos
# Estas variables deben configurarse en el dashboard de Render
# IMPORTANTE: NO usar 'localhost' o '127.0.0.1' como DB_HOST en Render
# DB_HOST=tu-servidor-mysql.com
# DB_PORT=3306
# DB_USER=tu_usuario
# DB_PASSWORD=tu_contraseña
# DB_NAME=tu_base_de_datos

# Configuración de JWT
# JWT_SECRET debe configurarse en el dashboard de Render
# JWT_SECRET=
JWT_EXPIRES_IN=8h

# URL del frontend
FRONTEND_URL=https://brayamsac-frontend.vercel.app

# Optimizaciones para MySQL
MYSQL_CONNECTION_LIMIT=10

# Configuración de logs
LOG_LEVEL=error
DISABLE_LOGIN_LOGS=true